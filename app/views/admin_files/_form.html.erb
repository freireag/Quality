<% form_for @admin_file, :html => {:id => "cadastro", :multipart => :true} do |f| %>
  <%= f.error_messages %>
  <p>
    <label>Título</label>
    <%= f.text_field :title %>
  </p>
  <p>
    <label>Permissão</label>
    <%= f.collection_select :permission, %w[inspetor aluno], :to_s, :humanize %>
  </p>
  <p>
    <label>Curso</label>
    <%= f.collection_select :course_id, Course.all, :id, :name, {:prompt => "Selecione"} %>
  </p>
  <p>
    <label>Arquivo</label>
    <%= f.file_field :attachment %>
  </p>
  <p>
    <%= link_to image_tag("voltar.png", :border => 0), admin_files_path %>
    <%= image_submit_tag 'cadastrar.png', :id => "bt_form" %> 
  </p>
<% end %>
