<h1>Editing admin_file</h1>

<% form_for(@admin_file) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :permission %><br />
    <%= f.collection_select :permission, %w[inspetor aluno], :to_s, :humanize %>
  </p>
  <p>
    <%= f.label :course %><br />
    <%= f.collection_select :course_id, Course.all, :id, :name, {:prompt => "Selecione"} %>
  </p>
  <p>
    <%= f.label :attachment_file_name %><br />
    <%= f.text_field :attachment_file_name %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @admin_file %> |
<%= link_to 'Back', admin_files_path %>

