<h1>Listing admin_files</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Permission</th>
    <th>Course</th>
    <th>User</th>
    <th>Attachment file name</th>
    <th>Attachment content type</th>
    <th>Attachment file size</th>
    <th>Attachment updated at</th>
  </tr>

<% @admin_files.each do |admin_file| %>
  <tr>
    <td><%=h admin_file.title %></td>
    <td><%=h admin_file.permission %></td>
    <td><%=h admin_file.course.try(:name) %></td>
    <td><%=h admin_file.user.name %></td>
    <td><%= link_to h(admin_file.attachment_file_name), admin_file.attachment.url %></td>
    <td><%=h admin_file.attachment_content_type %></td>
    <td><%=h admin_file.attachment_file_size %></td>
    <td><%=h admin_file.attachment_updated_at %></td>
    <td><%= link_to 'Show', admin_file %></td>
    <td><%= link_to 'Edit', edit_admin_file_path(admin_file) %></td>
    <% if can? :destroy, admin_file %>
      <td><%= link_to 'Destroy', admin_file, :confirm => 'Are you sure?', :method => :delete %></td>
    <% end %>
  </tr>
<% end %>
</table>

