<% form_for @course, :html => {:id => "cadastro"} do |f| %>
  <%= f.error_messages %>
  <p>
    <label>Nome</label>
    <%= f.text_field :name %>
  </p>
  <p>
    <label>Código</label>
    <%= f.text_field :code %>
  </p>
  <p>
    <label>Carga Horária</label>
    <%= f.text_field :credit_hours %>
  </p>
  <p>
    <label>Valor</label>
    <%= f.text_field :price %>
  </p>
  <p>
    <%= link_to image_tag("voltar.png", :border => 0), courses_path %>
    <%= image_submit_tag 'cadastrar.png', :id => "bt_form" %> 
  </p>
<% end %>
