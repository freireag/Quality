<body class="qw">

<!-- #geral -->
<div id="geral">

	  <!-- #header -->
    <div id="header">
    		<div id="logo"><a href="../index.html"><img src="images/logo130x77.jpg" width="130" height="77" alt="Quality - Home" border="0" /></a></div>
          <div id="admin"><h1>ADMINISTRATIVO</h1></div>

		  <% if user_signed_in? %>
        <div id="usuario">Olá <%=h current_user.name %>,</div>
        <div id="sair"><%= link_to image_tag("sair.png", :size=> "48x18", :border => 0), destroy_user_session_path %></div>
       <% elsif student_signed_in? %>
         <div id="usuario">Olá <%=h current_student.name %>,</div>
        <div id="sair"><%= link_to image_tag("sair.png", :size=> "48x18", :border => 0), destroy_student_session_path %></div>
      <% end %>

    </div>
	  <!-- #header -->

	  <div id="clear"><!-- alinhamento --></div>

    <p style="color: green"><%= notice %></p>
    <p style="color: red"><%= flash[:error] %></p>

    <!-- #sidebar -->
    <div id="sidebar">
          <!-- MENU -->
          <div id="menugeral">
              <ul>
                  <!-- LISTA -->
                  <li><%= link_to "Cadastros", students_path %></li>
                  <li><a href="frequencia.html">Frequência</a></li>
                  <li><a href="notas.html">Notas</a></li>
                  <li><%= link_to "Arquivos", admin_files_path %></li>
                  <li><a href="avisos.html">Avisos</a></li>
                  <li><a href="logs.html">Log's</a></li>
                  <li><a href="boletos.html">Boletos</a></li>
                  <!-- /LISTA -->
	            </ul>
         </div>
         <!-- /MENU -->
    </div>
    <!-- /#sidebar -->

    <!-- #main -->
    <div id="main">

      <%= yield %>

    </div>
    <!-- /#main -->
    <br class="clearfloat" />

</div>
<!-- /#geral -->

</body>
</html>

