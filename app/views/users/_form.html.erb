<% form_for @user, :html => {:id => "cadastro"} do |f| %>
  <%= f.error_messages %>
  <p>
    <label>Nome</label>
    <%= f.text_field :name %>
  </p>
  <p>
    <label>Login</label>
    <%= f.text_field :login %>
  </p>
  <p>
    <label>Email <i>(opcional)</i></label>
    <%= f.text_field :email %>
  </p>
  <p>
    <label>Senha</label>
    <%= f.password_field :password %>
  </p>
  <p>
    <label>Confirme sua Senha</label>
    <%= f.password_field :password_confirmation %>
  </p>
  <p>
    <label>Tipo</label>
    <%= f.collection_select :role, User::ROLES, :to_s, :humanize %>
  </p>
  <p>
    <%= link_to image_tag("voltar.png", :border => 0), users_path %>
    <%= image_submit_tag 'cadastrar.png', :id => "bt_form" %> 
  </p>
<% end %>
