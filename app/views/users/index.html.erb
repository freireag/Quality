<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Login</th>
    <th>Email</th>
    <th>Role</th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.login %></td>
    <td><%=h user.email %></td>
    <td><%=h user.role %></td>
    <td><%= link_to 'Show', user %></td>
    <% if can? :update, user %>
      <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <% end %>
  </tr>
<% end %>
</table>

<br />

<% if can? :create, @users %>
  <%= link_to 'New user', new_user_path %>
<% end %>

